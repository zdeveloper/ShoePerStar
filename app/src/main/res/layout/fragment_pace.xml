            android:orientation="vertical"
            android:layout_margin="15dp"
            android:weightSum="1"
            android:id="@+id/paceLayout1"
            android:layout_gravity="center_horizontal"
            android:visibility="visible">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".25"
                    android:gravity="center"
                    android:id="@+id/distanceQuestion"
                    android:text="How far would you like to go?"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".5"
                    android:inputType="numberDecimal"
                    android:id="@+id/distanceEditText"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".25"
                    android:layout_margin="15dp"
                    android:weightSum="1"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".70">

                        </LinearLayout>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".30"
                        android:text="Next >"
                        android:id="@+id/distanceButton"
                        />

                    </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:weightSum="1"
            android:id="@+id/paceLayout2"
            android:visibility="invisible"
            >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:gravity="center"
                android:id="@+id/timeQuestion"
                android:text="How much time do you want to complete this?"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:inputType="numberDecimal"
                android:id="@+id/distanceEditText2"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".25"
                android:layout_margin="15dp"
                android:weightSum="1"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".70">

                </LinearLayout>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".30"
                    android:text="Next >"
                    android:id="@+id/paceButton"
                    />

            </LinearLayout>
        </LinearLayout>




